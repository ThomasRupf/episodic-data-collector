{
    "python.defaultInterpreterPath": ".edc_venv/bin/python3",
    "flake8.args": [
        "--max-line-length=110",
        "--ignore=E402,E731,W503,E203,E722,F722"
    ],
    "black-formatter.args": [
        "--line-length=110"
    ],
    "isort.args":[
        "--profile", "black",
        "-l", "110"
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always",
        },
    },
}
